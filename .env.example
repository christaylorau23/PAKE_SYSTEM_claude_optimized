# PAKE System Configuration Template
# Copy this to .env and replace all placeholders with actual values
# NEVER commit .env files to version control!

# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================
NODE_ENV=development
ENVIRONMENT=development

# =============================================================================
# DIRECTORY AND PATH CONFIGURATION
# =============================================================================
VAULT_PATH=D:\Knowledge-Vault

# =============================================================================
# SERVICE PORTS
# =============================================================================
BRIDGE_PORT=3000
MCP_SERVER_PORT=8000

# =============================================================================
# API URLS (Update for production)
# =============================================================================
API_BRIDGE_URL=http://localhost:3000
MCP_SERVER_URL=http://localhost:8000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# ⚠️ SECURITY: Use strong, unique REDACTED_SECRETs (minimum 16 characters)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=pake_system
DB_USER=pake_user
DB_PASSWORD=CHANGE_ME_STRONG_DATABASE_PASSWORD_HERE

# Alternative database URL format
# DATABASE_URL=postgresql://pake_user:CHANGE_ME_STRONG_DATABASE_PASSWORD_HERE@localhost:5432/pake_system

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
