# PAKE System - Development Environment Configuration
# DO NOT COMMIT ACTUAL VALUES - USE VAULT FOR PRODUCTION

# Environment
NODE_ENV=development
LOG_LEVEL=debug
PORT=3000

# Vault Configuration
VAULT_ADDR=http://localhost:8200
VAULT_TOKEN=pake-dev-root-token
VAULT_SECRET_PATH=kv/pake-system

# Database (Retrieved from Vault in production)
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=pake_system_dev
DATABASE_USER=dev_user
DATABASE_PASSWORD=dev_REDACTED_SECRET
DATABASE_SSL=false
DATABASE_POOL_SIZE=10

# Redis (Retrieved from Vault in production)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=dev_redis_REDACTED_SECRET
REDIS_DB=0
REDIS_TTL=3600

# JWT Configuration (Retrieved from Vault in production)
JWT_SECRET=dev_jwt_secret_key_32_chars_min
JWT_EXPIRATION=30m
JWT_ALGORITHM=HS256

# Voice Agents Service
VOICE_AGENTS_PORT=9000
VAPI_API_KEY=placeholder_vapi_key
VAPI_WEBHOOK_SECRET=placeholder_webhook_secret

# Video Generation Service
VIDEO_GENERATION_PORT=9001
DID_API_KEY=placeholder_did_key
HEYGEN_API_KEY=placeholder_heygen_key

# Social Media Automation Service
SOCIAL_MEDIA_PORT=9002
TWITTER_BEARER_TOKEN=placeholder_twitter_bearer
TWITTER_API_KEY=placeholder_twitter_api_key
TWITTER_API_SECRET=placeholder_twitter_api_secret
OPENAI_API_KEY=placeholder_openai_key
ANTHROPIC_API_KEY=placeholder_anthropic_key

# Frontend
NEXT_PUBLIC_API_BASE_URL=http://localhost:3000/api
NEXT_PUBLIC_VAULT_HEALTH_CHECK=http://localhost:8200/v1/sys/health

# Monitoring and Logging
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_TRACING=true
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# Development Tools
ENABLE_DEV_TOOLS=true
ENABLE_HOT_RELOAD=true
MOCK_EXTERNAL_APIS=true