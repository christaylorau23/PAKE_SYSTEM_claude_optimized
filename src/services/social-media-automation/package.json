{
  "name": "@pake-system/social-media-automation",
  "version": "1.0.0",
  "description": "PAKE System Multi-Platform Social Media Automation Service",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "start": "node dist/index.js",
    "start:dev": "ts-node src/index.ts",
    "start:watch": "nodemon --exec ts-node src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build",
    "health-check": "curl -f http://localhost:9002/health || exit 1"
  },
  "keywords": [
    "social-media",
    "automation",
    "twitter",
    "linkedin",
    "instagram",
    "facebook",
    "scheduling",
    "content-management",
    "analytics",
    "pake-system"
  ],
  "author": "PAKE System Development Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "dotenv": "^16.3.1",
    "multer": "^2.0.0",
    "sharp": "^0.32.6",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/multer": "^1.4.11",
    "winston": "^3.11.0",
    "uuid": "^9.0.1",
    "joi": "^17.11.0",
    "rate-limiter-flexible": "^4.0.1",
    "node-cron": "^3.0.3",
    "twitter-api-v2": "^1.15.0",
    "ioredis": "^5.3.2",
    "bull": "^4.12.0",
    "canvas": "^2.11.2",
    "openai": "^4.20.0",
    "@anthropic-ai/sdk": "^0.28.0"
  },
  "devDependencies": {
    "typescript": "^5.2.2",
    "ts-node": "^10.9.1",
    "nodemon": "^3.0.1",
    "@types/node": "^20.8.0",
    "@types/uuid": "^9.0.7",
    "@types/jest": "^29.5.6",
    "@types/node-cron": "^3.0.11",
    "@types/oauth": "^0.9.4",
    "@types/bull": "^4.10.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "eslint": "^8.51.0",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "prettier": "^3.0.3",
    "supertest": "^6.3.3",
    "@types/supertest": "^2.0.15"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src",
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/*.(test|spec).ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/index.ts"
    ]
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "@typescript-eslint/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "rules": {
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ],
      "@typescript-eslint/explicit-function-return-type": "warn",
      "@typescript-eslint/no-explicit-any": "warn"
    }
  }
}
