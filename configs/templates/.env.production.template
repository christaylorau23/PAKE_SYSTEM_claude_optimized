# PAKE System - Production Environment Configuration
# ALL SECRETS MUST BE RETRIEVED FROM VAULT - NO HARDCODED VALUES

# Environment
NODE_ENV=production
LOG_LEVEL=info
PORT=${PORT:-3000}

# Vault Configuration (Required)
VAULT_ADDR=${VAULT_ADDR}
VAULT_TOKEN=${VAULT_TOKEN}
VAULT_SECRET_PATH=kv/pake-system

# Security Headers
SECURITY_HEADERS_ENABLED=true
CORS_ORIGIN=${CORS_ORIGIN:-https://your-domain.com}
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Database (Retrieved from Vault)
DATABASE_HOST=${DATABASE_HOST}
DATABASE_PORT=${DATABASE_PORT:-5432}
DATABASE_NAME=${DATABASE_NAME}
DATABASE_USER=${DATABASE_USER}
DATABASE_PASSWORD=${DATABASE_PASSWORD}
DATABASE_SSL=true
DATABASE_SSL_REJECT_UNAUTHORIZED=true
DATABASE_POOL_SIZE=20
DATABASE_CONNECTION_TIMEOUT=30000

# Redis (Retrieved from Vault)
REDIS_HOST=${REDIS_HOST}
REDIS_PORT=${REDIS_PORT:-6379}
REDIS_PASSWORD=${REDIS_PASSWORD}
REDIS_DB=0
REDIS_TTL=7200
REDIS_CLUSTER_MODE=false

# JWT Configuration (Retrieved from Vault)
JWT_SECRET=${JWT_SECRET}
JWT_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d
JWT_ALGORITHM=HS256

# Service Ports
VOICE_AGENTS_PORT=9000
VIDEO_GENERATION_PORT=9001
SOCIAL_MEDIA_PORT=9002

# External API Keys (Retrieved from Vault)
VAPI_API_KEY=${VAPI_API_KEY}
VAPI_WEBHOOK_SECRET=${VAPI_WEBHOOK_SECRET}
DID_API_KEY=${DID_API_KEY}
HEYGEN_API_KEY=${HEYGEN_API_KEY}
TWITTER_BEARER_TOKEN=${TWITTER_BEARER_TOKEN}
TWITTER_API_KEY=${TWITTER_API_KEY}
TWITTER_API_SECRET=${TWITTER_API_SECRET}
OPENAI_API_KEY=${OPENAI_API_KEY}
ANTHROPIC_API_KEY=${ANTHROPIC_API_KEY}

# Frontend
NEXT_PUBLIC_API_BASE_URL=${NEXT_PUBLIC_API_BASE_URL}
NEXT_PUBLIC_VAULT_HEALTH_CHECK=${VAULT_ADDR}/v1/sys/health

# Monitoring and Observability
ENABLE_METRICS=true
METRICS_PORT=9090
PROMETHEUS_ENDPOINT=/metrics
ENABLE_TRACING=true
JAEGER_ENDPOINT=${JAEGER_ENDPOINT}
SENTRY_DSN=${SENTRY_DSN}

# Health Checks
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_INTERVAL=30000

# SSL/TLS Configuration
SSL_CERT_PATH=${SSL_CERT_PATH}
SSL_KEY_PATH=${SSL_KEY_PATH}
SSL_CA_PATH=${SSL_CA_PATH}

# Load Balancing
CLUSTER_MODE=true
WORKER_PROCESSES=${WORKER_PROCESSES:-auto}

# Backup and Recovery
BACKUP_ENABLED=true
BACKUP_SCHEDULE=${BACKUP_SCHEDULE:-0 2 * * *}
BACKUP_RETENTION_DAYS=${BACKUP_RETENTION_DAYS:-30}

# Compliance
AUDIT_LOGS_ENABLED=true
GDPR_COMPLIANCE_MODE=true
DATA_RETENTION_DAYS=${DATA_RETENTION_DAYS:-365}