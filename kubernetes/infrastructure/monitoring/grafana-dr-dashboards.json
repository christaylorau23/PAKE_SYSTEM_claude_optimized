          {
            "expr": "pitr_retention_policy_hours",
            "legendFormat": "{{service}} - Retention Policy",
            "refId": "B"
          }
        ],
        "yAxes": [
          {
            "label": "Hours",
            "unit": "h",
            "min": 0
          }
        ],
        "thresholds": [
          {
            "value": 168,
            "colorMode": "warning",
            "op": "lt",
            "fill": true,
            "lineColor": "rgba(237, 129, 40, 0.9)",
            "yAxis": "left"
          }
        ]
      },
      {
        "id": 8,
        "title": "üéØ Chaos Engineering Success Rate",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 30 },
