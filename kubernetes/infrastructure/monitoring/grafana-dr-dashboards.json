      {
        "id": 20,
        "title": "üö® Active Alerts Summary",
        "type": "table",
        "gridPos": { "h": 8, "w": 24, "x": 0, "y": 84 },
        "targets": [
          {
            "expr": "ALERTS{alertstate=\"firing\", severity=~\"critical|warning\"}",
            "legendFormat": "",
            "refId": "A",
            "format": "table",
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "__name__": true,
                "Time": true,
                "job": true,
                "instance": true
              },
              "indexByName": {
                "alertname": 0,
                "severity": 1,
                "summary": 2,
                "description": 3,
                "runbook_url": 4
              },
              "renameByName": {
                "alertname": "Alert",
                "severity": "Severity",
                "summary": "Summary",
                "description": "Description",
                "runbook_url": "Runbook"
              }
            }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "left",
              "displayMode": "auto"
            },
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
