{
  "name": "@pake/secrets-manager",
  "version": "1.0.0",
  "description": "PAKE System Secrets Management & Encryption Service - Zero-trust secrets with automatic rotation",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "dev": "ts-node src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run src/tests/*.test.ts",
    "test:integration": "vitest run src/tests/integration.test.ts",
    "test:performance": "vitest run src/tests/performance.test.ts",
    "test:security": "vitest run src/tests/security.test.ts",
    "test:ci": "vitest run --coverage --reporter=verbose",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "ci": "npm run lint && npm run test:ci && npm run build",
    "vault:dev": "vault server -dev -dev-root-token-id=dev-token",
    "vault:init": "ts-node scripts/vault-init.ts",
    "vault:unseal": "ts-node scripts/vault-unseal.ts",
    "rotate:keys": "ts-node scripts/rotate-keys.ts",
    "hsm:setup": "ts-node scripts/hsm-setup.ts",
    "break-glass": "ts-node scripts/break-glass.ts"
  },
  "keywords": [
    "pake",
    "secrets",
    "vault",
    "encryption",
    "security",
    "hsm",
    "mtls",
    "compliance",
    "zero-trust"
  ],
  "author": "PAKE System",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-kms": "^3.454.0",
    "@aws-sdk/client-secrets-manager": "^3.454.0",
    "@aws-sdk/client-ssm": "^3.454.0",
    "@grpc/grpc-js": "^1.9.14",
    "argon2": "^0.31.2",
    "aws-sdk": "^2.1491.0",
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "forge": "^2.3.0",
    "grpc": "^1.24.11",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "jose": "^5.1.3",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.3.0",
    "node-cron": "^3.0.3",
    "node-forge": "^1.3.1",
    "node-rsa": "^1.1.1",
    "node-vault": "^0.10.2",
    "pem": "^1.14.8",
    "pg": "^8.11.3",
    "pkcs11js": "^2.1.0",
    "prom-client": "^15.1.3",
    "protobufjs": "^7.2.5",
    "redis": "^4.6.10",
    "tls": "^0.0.1",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/express": "^4.17.21",
    "@types/minimatch": "6.0.0",
    "@types/node": "^20.9.0",
    "@types/node-forge": "^1.3.10",
    "@types/node-rsa": "^1.1.4",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "@vitest/coverage-v8": "^1.6.0",
    "@vitest/ui": "^1.6.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "nock": "^13.4.0",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3",
    "testcontainers": "^10.4.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "vitest": "^1.6.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "vault": {
    "version": "1.15.2",
    "endpoints": {
      "dev": "http://127.0.0.1:8200",
      "staging": "https://vault-staging.pake-system.internal:8200",
      "production": "https://vault.pake-system.internal:8200"
    },
    "engines": {
      "kv": "secret/",
      "database": "database/",
      "transit": "transit/",
      "pki": "pki/"
    }
  },
  "hsm": {
    "providers": {
      "aws-cloudhsm": {
        "enabled": false,
        "library": "/opt/cloudhsm/lib/libcloudhsm_pkcs11.so"
      },
      "thales": {
        "enabled": false,
        "library": "/opt/nfast/toolkits/pkcs11/libcknfast.so"
      },
      "utimaco": {
        "enabled": false,
        "library": "/opt/utimaco/Software/PKCS11/lib/cs_pkcs11_R2.so"
      },
      "softhsm": {
        "enabled": true,
        "library": "/usr/lib/softhsm/libsofthsm2.so",
        "tokenDir": "/var/lib/softhsm/tokens/"
      }
    }
  },
  "encryption": {
    "algorithms": {
      "symmetric": "aes-256-gcm",
      "asymmetric": "rsa-4096",
      "hashing": "sha512",
      "kdf": "argon2id"
    },
    "keyDerivation": {
      "iterations": 100000,
      "memory": 65536,
      "parallelism": 4
    }
  },
  "rotation": {
    "schedule": {
      "api-keys": "0 0 */90 * *",
      "database-REDACTED_SECRETs": "0 0 */30 * *",
      "encryption-keys": "0 0 1 1 *",
      "certificates": "0 0 */90 * *"
    },
    "gracePeriod": "7d",
    "backupCount": 3
  }
}
