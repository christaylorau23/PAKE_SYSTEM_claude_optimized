{
  "name": "@pake/services",
  "version": "1.0.0",
  "description": "PAKE System - MCP Connectors and Trend Pipeline Services",
  "main": "index.js",
  "scripts": {
    "test": "node run-tests.js",
    "test:watch": "node run-tests.js --watch",
    "test:connectors": "node run-tests.js --suite connectors",
    "test:trends": "node run-tests.js --suite trends",
    "test:integration": "node run-tests.js --suite integration",
    "test:coverage": "node run-tests.js --json",
    "test:quick": "node run-tests.js --no-coverage --silent",
    "test:ci": "node run-tests.js --json --serial",
    "lint": "eslint **/*.ts --fix",
    "typecheck": "tsc --noEmit",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rimraf dist coverage test-results",
    "dev": "ts-node-dev --respawn --transpile-only",
    "start": "node dist/index.js",
    "format": "prettier --write **/*.{ts,js,json,md}",
    "docs": "typedoc --out docs src",
    "validate": "npm run lint && npm run typecheck && npm run test:quick"
  },
  "keywords": [
    "pake",
    "mcp",
    "connectors",
    "trends",
    "web-scraping",
    "database",
    "queue",
    "pipeline",
    "anomaly-detection"
  ],
  "author": "PAKE System",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-sqs": "^3.450.0",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "amqplib": "^0.10.3",
    "cheerio": "^1.0.0-rc.12",
    "pg": "^8.11.3",
    "redis": "^4.6.10",
    "robots-parser": "^3.0.1",
    "user-agents": "^1.0.1397",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@types/amqplib": "^0.10.4",
    "@types/cheerio": "^0.22.35",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@types/pg": "^8.10.7",
    "@types/xml2js": "^0.4.14",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jest": "^27.6.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "jest-sonar-reporter": "^2.0.0",
    "jest-watch-typeahead": "^2.2.2",
    "nock": "^13.4.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typedoc": "^0.25.4",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pake-system/pake-system.git",
    "directory": "services"
  },
  "bugs": {
    "url": "https://github.com/pake-system/pake-system/issues"
  },
  "homepage": "https://github.com/pake-system/pake-system#readme",
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "testMatch": [
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "**/*.ts",
      "!**/*.d.ts",
      "!**/node_modules/**",
      "!**/tests/**",
      "!**/__tests__/**",
      "!**/dist/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 85,
        "lines": 85,
        "statements": 85
      }
    }
  }
}
