{
  "dashboard": {
    "id": null,
    "uid": "dr-backups-dashboard",
    "title": "DR & Backups - PAKE System",
    "description": "Comprehensive monitoring for Disaster Recovery, Backups, Chaos Engineering, and Compliance",
    "tags": [
      "disaster-recovery",
      "backups",
      "chaos-engineering",
      "compliance",
      "sre"
    ],
    "timezone": "utc",
    "schemaVersion": 30,
    "version": 1,
    "refresh": "30s",
    "time": {
      "from": "now-24h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": [
        "10s",
        "30s",
        "1m",
        "5m",
        "15m",
        "30m",
        "1h",
        "2h",
        "1d"
      ],
      "time_options": ["5m", "15m", "1h", "6h", "12h", "24h", "2d", "7d", "30d"]
    },
    "templating": {
      "list": [
        {
          "name": "namespace",
          "type": "query",
          "query": "label_values(up, namespace)",
          "current": {
            "text": "All",
            "value": "$__all"
          },
          "includeAll": true,
          "multi": true,
          "options": [],
          "refresh": 1,
          "regex": "",
          "sort": 1
        },
        {
          "name": "service",
          "type": "query",
          "query": "label_values(backup_operations_total, service)",
          "current": {
            "text": "All",
            "value": "$__all"
          },
          "includeAll": true,
          "multi": true,
          "options": [],
          "refresh": 1,
          "regex": "",
          "sort": 1
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "name": "Incidents",
          "datasource": "Prometheus",
          "enable": true,
          "expr": "ALERTS{alertstate=\"firing\", severity=~\"critical|warning\"}",
          "iconColor": "red",
          "tagKeys": "alertname,severity",
          "titleFormat": "{{alertname}}",
          "textFormat": "{{severity}}: {{description}}"
        },
        {
          "name": "Deployments",
          "datasource": "Prometheus",
          "enable": true,
          "expr": "kube_deployment_status_replicas_updated",
          "iconColor": "blue",
          "tagKeys": "deployment,namespace",
          "titleFormat": "Deployment: {{deployment}}",
          "textFormat": "{{namespace}}/{{deployment}} updated"
        }
      ]
    },
    "panels": [
      {
        "id": 1,
        "title": "üö® DR System Health Overview",
        "type": "stat",
        "gridPos": { "h": 8, "w": 24, "x": 0, "y": 0 },
        "targets": [
          {
            "expr": "up{job=~\".*backup.*|.*disaster.*|.*compliance.*\"}",
            "legendFormat": "{{job}} - {{instance}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "red", "value": 0 },
                { "color": "green", "value": 1 }
              ]
            },
            "mappings": [
              { "options": { "0": { "text": "DOWN" } }, "type": "value" },
              { "options": { "1": { "text": "UP" } }, "type": "value" }
            ]
          }
        },
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "orientation": "auto",
          "textMode": "auto",
          "colorMode": "background",
          "graphMode": "none",
          "justifyMode": "auto"
        }
      },
      {
        "id": 2,
        "title": "‚è±Ô∏è RTO Performance (Recovery Time Objective)",
        "type": "stat",
        "gridPos": { "h": 6, "w": 8, "x": 0, "y": 8 },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(failover_duration_seconds_bucket[24h]))",
            "legendFormat": "95th Percentile RTO",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.50, rate(failover_duration_seconds_bucket[24h]))",
            "legendFormat": "Median RTO",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "unit": "s",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "green", "value": 0 },
                { "color": "yellow", "value": 900 },
                { "color": "red", "value": 1800 }
              ]
            }
          }
        },
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "orientation": "auto",
          "textMode": "value_and_name",
          "colorMode": "background"
        }
      },
      {
        "id": 3,
        "title": "üìä RPO Performance (Recovery Point Objective)",
        "type": "stat",
        "gridPos": { "h": 6, "w": 8, "x": 8, "y": 8 },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(data_loss_seconds_bucket[24h]))",
            "legendFormat": "95th Percentile RPO",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.50, rate(data_loss_seconds_bucket[24h]))",
            "legendFormat": "Median RPO",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "unit": "s",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "green", "value": 0 },
                { "color": "yellow", "value": 300 },
                { "color": "red", "value": 600 }
              ]
            }
          }
        },
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "orientation": "auto",
          "textMode": "value_and_name",
          "colorMode": "background"
        }
      },
      {
        "id": 4,
        "title": "‚úÖ Backup Success Rate (24h)",
        "type": "stat",
        "gridPos": { "h": 6, "w": 8, "x": 16, "y": 8 },
