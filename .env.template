# PAKE+ System Environment Configuration Template
# Copy this to .env and fill in your actual API credentials

# ============================================================================
# PHASE 2B: REAL API INTEGRATION CREDENTIALS
# ============================================================================

# Firecrawl API (Web Scraping with JS Rendering)
# Get from: https://firecrawl.dev/
FIRECRAWL_API_KEY=your_firecrawl_api_key_here
FIRECRAWL_BASE_URL=https://api.firecrawl.dev

# PubMed E-utilities (Required for production)
# Get from: https://www.ncbi.nlm.nih.gov/account/
PUBMED_EMAIL=your_email@domain.com
PUBMED_API_KEY=your_pubmed_api_key_here

# ArXiv API (No key required, but rate limiting)
ARXIV_BASE_URL=http://export.arxiv.org/api/query
ARXIV_USER_AGENT=PAKE-System/2.0 (your_email@domain.com)

# ============================================================================
# OBSIDIAN INTEGRATION
# ============================================================================

# Obsidian Vault Path
VAULT_PATH=D:\Knowledge-Vault
OBSIDIAN_BRIDGE_PORT=3001

# ============================================================================
# EMAIL INTEGRATION (Choose one)
# ============================================================================

# Gmail API
GMAIL_CLIENT_ID=your_gmail_client_id
GMAIL_CLIENT_SECRET=your_gmail_client_secret
GMAIL_REFRESH_TOKEN=your_gmail_refresh_token

# Or IMAP/SMTP
EMAIL_IMAP_SERVER=imap.gmail.com
EMAIL_IMAP_PORT=993
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_REDACTED_SECRET

# ============================================================================
# SOCIAL MEDIA INTEGRATION
# ============================================================================

# Twitter/X API v2
TWITTER_BEARER_TOKEN=your_twitter_bearer_token
TWITTER_CLIENT_ID=your_twitter_client_id
TWITTER_CLIENT_SECRET=your_twitter_client_secret

# LinkedIn API
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret

# Reddit API
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USER_AGENT=PAKE-System/2.0

# ============================================================================
# RSS/FEED INTEGRATION
# ============================================================================

# RSS Hub (Optional - for enhanced RSS processing)
RSS_HUB_URL=https://rsshub.app

# ============================================================================
# DATABASE & CACHING
# ============================================================================

# Redis (for production caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_REDACTED_SECRET

# PostgreSQL (for enhanced data persistence)
DATABASE_URL=postgresql://username:REDACTED_SECRET@localhost:5432/pake_db

# ============================================================================
# SECURITY & AUTHENTICATION
# ============================================================================

# JWT Secret for API authentication
JWT_SECRET=your_very_secure_random_string_here
JWT_EXPIRATION=24h

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================================================
# MONITORING & ANALYTICS
# ============================================================================

# Sentry (Error Monitoring)
SENTRY_DSN=your_sentry_dsn_here

# New Relic (Performance Monitoring)
NEW_RELIC_LICENSE_KEY=your_new_relic_license_key

# Custom Analytics
ANALYTICS_ENABLED=true
METRICS_ENDPOINT=http://localhost:3002/metrics

# ============================================================================
# PRODUCTION SETTINGS
# ============================================================================

NODE_ENV=production
LOG_LEVEL=info
ENABLE_SWAGGER_DOCS=false
ENABLE_DEBUG_ENDPOINTS=false

# Performance Optimization
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT_MS=30000
CACHE_TTL_HOURS=24

# ============================================================================
# ADVANCED FEATURES
# ============================================================================

# AI/ML Integration
OPENAI_API_KEY=your_openai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key

# Workflow Automation
N8N_WEBHOOK_URL=http://localhost:5678/webhook
N8N_API_KEY=your_n8n_api_key

# Cloud Storage (Optional)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=pake-system-storage