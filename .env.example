DID_API_KEY=your_actual_did_api_key_here
HEYGEN_API_KEY=your_actual_heygen_api_key_here

# =============================================================================
# APPLICATION CREDENTIALS
# =============================================================================
# ⚠️ SECURITY: Use strong, unique REDACTED_SECRETs (minimum 16 characters)
N8N_USER=admin
N8N_PASSWORD=CHANGE_ME_STRONG_N8N_PASSWORD_HERE

# =============================================================================
# LOGGING AND MONITORING
# =============================================================================
LOG_LEVEL=INFO
LOG_PATH=logs/

# =============================================================================
# PROCESSING CONFIGURATION
# =============================================================================
CONFIDENCE_THRESHOLD=0.7
MAX_FILE_SIZE=50MB
PROCESSING_BATCH_SIZE=10

# =============================================================================
# DOCKER SPECIFIC CONFIGURATION
# =============================================================================
# PostgreSQL Docker Configuration
POSTGRES_PASSWORD=CHANGE_ME_STRONG_POSTGRES_PASSWORD_HERE
POSTGRES_PORT=5432

# Redis Docker Configuration
# REDIS_PASSWORD=CHANGE_ME_STRONG_REDIS_PASSWORD_HERE (defined above)

# MCP Server Configuration
MCP_PORT=8000

# n8n Docker Configuration
N8N_HOST=localhost
N8N_PORT=5678

# Nginx Configuration
NGINX_PORT=80
NGINX_HTTPS_PORT=443

# Ollama Configuration
OLLAMA_PORT=11434

# =============================================================================
# VOICE AGENT CONFIGURATION
# =============================================================================
# Voice Agent Service Configuration
VOICE_AGENT_PORT=9000
VOICE_AGENT_HOST=localhost

# Voice Quality Settings
VOICE_RESPONSE_TIMEOUT=5000
VOICE_STREAMING_LATENCY=3
VOICE_QUALITY_THRESHOLD=0.8
CONVERSATION_MEMORY_TTL=3600

# Error Handling Settings
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=30000
MAX_RETRY_ATTEMPTS=3
FALLBACK_PROVIDER=elevenlabs

# Knowledge Integration Settings
KNOWLEDGE_CONTEXT_DEPTH=5
KNOWLEDGE_CONFIDENCE_THRESHOLD=0.7
REAL_TIME_SEARCH_ENABLED=true

# =============================================================================
# SECURITY NOTES
# =============================================================================
#
# 1. NEVER commit this file when filled with real values
# 2. Use a REDACTED_SECRET manager to generate strong REDACTED_SECRETs (16+ characters)
# 3. Rotate all REDACTED_SECRETs regularly (recommended: every 90 days)
# 4. Use different REDACTED_SECRETs for each service
# 5. For production, consider using AWS Secrets Manager, HashiCorp Vault, or similar
# 6. Monitor access logs for suspicious activity
# 7. Use HTTPS in production environments
# 8. Restrict API key permissions to minimum required scope
#
# Password Requirements:
# - Minimum 16 characters
# - Mix of uppercase, lowercase, numbers, and special characters
# - No dictionary words or common patterns
# - Unique for each service
#
# Example strong REDACTED_SECRET: K9#mX7$vR2@nP5!wQ8&zL3
#
