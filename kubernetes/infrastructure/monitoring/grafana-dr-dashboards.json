                { "color": "red", "value": 0 },
                { "color": "yellow", "value": 95 },
                { "color": "green", "value": 99 }
              ]
            }
          }
        },
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "orientation": "auto",
          "textMode": "value_and_name",
          "colorMode": "background"
        }
      },
      {
        "id": 5,
        "title": "üïê Backup Freshness by Service",
        "type": "bargauge",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 14 },
        "targets": [
          {
            "expr": "backup_age_hours",
            "legendFormat": "{{backup_type}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "unit": "h",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "green", "value": 0 },
                { "color": "yellow", "value": 24 },
                { "color": "orange", "value": 48 },
                { "color": "red", "value": 72 }
              ]
            }
          }
        },
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "orientation": "horizontal",
          "displayMode": "gradient",
          "showUnfilled": true
        }
      },
      {
        "id": 6,
        "title": "üîÑ Replication Lag (Real-time)",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 14 },
        "targets": [
          {
            "expr": "replication_lag_seconds",
            "legendFormat": "{{service}} - {{replica}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Lag (seconds)",
            "unit": "s",
            "min": 0
          }
        ],
        "thresholds": [
          {
            "value": 300,
            "colorMode": "critical",
            "op": "gt",
            "fill": true,
            "lineColor": "rgba(245, 54, 54, 0.9)",
            "yAxis": "left"
          },
          {
            "value": 60,
            "colorMode": "warning",
            "op": "gt",
            "fill": true,
            "lineColor": "rgba(237, 129, 40, 0.9)",
            "yAxis": "left"
          }
        ],
        "alert": {
          "conditions": [
            {
              "query": { "params": ["A", "5m", "now"] },
              "reducer": { "params": [], "type": "avg" },
              "evaluator": { "params": [300], "type": "gt" }
            }
          ],
          "executionErrorState": "alerting",
          "for": "5m",
          "frequency": "10s",
          "handler": 1,
          "name": "High Replication Lag",
          "noDataState": "no_data"
        }
      },
      {
        "id": 7,
        "title": "‚è™ PITR Headroom (Point-in-Time Recovery)",
