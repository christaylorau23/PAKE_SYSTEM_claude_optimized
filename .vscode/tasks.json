{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "🏗️ Build: TypeScript Bridge",
      "type": "npm",
      "script": "build:bridge",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": "$tsc"
    },
    {
      "label": "🚀 Start: TypeScript Bridge",
      "type": "npm",
      "script": "start:bridge",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "new"
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "label": "🧪 Test: All Python Tests",
      "type": "shell",
      "command": "python",
      "args": ["-m", "pytest", "tests/", "-v"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "new"
      },
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          "PYTHONPATH": "${workspaceFolder}/src"
        }
      },
      "problemMatcher": "$python"
    },
    {
      "label": "🧪 Test: TypeScript Tests",
      "type": "npm",
      "script": "test:typescript",
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "🏥 Health: System Check",
      "type": "npm",
      "script": "health:full",
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "🔧 Lint: All Code",
      "type": "npm",
      "script": "lint",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "panel": "shared"
      }
    },
    {
      "label": "🔧 Lint: Fix All",
      "type": "npm",
      "script": "lint:fix",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "panel": "shared"
      }
    },
    {
      "label": "📊 Coverage: Generate Report",
      "type": "npm",
      "script": "test:coverage",
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "🧹 Clean: All Build Files",
      "type": "npm",
      "script": "clean",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "panel": "shared"
      }
    },
    {
      "label": "🔄 Reset: Full Environment",
      "type": "npm",
      "script": "reset",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "new"
      },
      "runOptions": {
        "instanceLimit": 1
      }
    },
    {
      "label": "👨‍⚕️ Doctor: System Diagnostics",
      "type": "npm",
      "script": "doctor",
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "📚 Setup: Complete Installation",
      "type": "npm",
      "script": "setup",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "new"
      },
      "runOptions": {
        "instanceLimit": 1
      }
    }
  ]
}