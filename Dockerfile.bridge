# PAKE System Bridge Dockerfile
FROM node:22-alpine

# Set work directory
WORKDIR /app

# Copy package files
COPY src/bridge/package*.json ./

# Install dependencies
RUN npm ci --only=production && npm cache clean --force

# Copy application code
COPY src/bridge/ .

# Create non-root user
RUN addgroup -g 1000 pake && adduser -D -s /bin/sh -u 1000 -G pake pake
RUN chown -R pake:pake /app
USER pake

# Expose port
EXPOSE 3001

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
  CMD node -e "require('http').get('http://localhost:3001/health', (res) => { process.exit(res.statusCode === 200 ? 0 : 1) })"

# Start application
CMD ["npm", "start"]
